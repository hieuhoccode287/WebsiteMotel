@using WEBSITE_MOTEL.Models
@using PagedList.Mvc;
@model PagedList.PagedList<WEBSITE_MOTEL.Models.RoomDetail>

@{
    ViewBag.Title = "RoomApprove";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}

<h2>Danh sách các phòng trọ chưa được duyệt</h2>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    @using (Html.BeginForm("RoomApprove", "QLDUYETPHONG", FormMethod.Get, new { @class = "navbar-form navbar-left", @role = "search" }))
                    {
                        <div class="form-group">
                            <input type="text" class="form-control" name="strSearch" value="@ViewData["strSearch"]" placeholder="Tìm kiếm">
                        </div>
                    }

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Tên phòng</th>
                                <th>Mô tả</th>
                                <th>Diện tích</th>
                                <th>Số lượng</th>
                                <th>Giá</th>
                                <th>Diện tích</th>
                                <th>Địa chỉ</th>
                                <th>Ảnh bìa</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var carouselId = "carousel-" + item.sMa; // Unique ID for each carousel
                                <tr>
                                    <td style="max-width: 200px; word-wrap: break-word; overflow-wrap: break-word; white-space: normal;">
                                        @Html.DisplayFor(modelItem => item.sTenPhong)
                                    </td>
                                    <td style="max-width: 200px; word-wrap: break-word; overflow-wrap: break-word; white-space: normal;">
                                        @Html.DisplayFor(modelItem => item.sMoTa)
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.sDienTich)</td>
                                    <td>@Html.DisplayFor(modelItem => item.sSoluong)</td>
                                    <td>@Html.DisplayFor(modelItem => item.dGiaCa)</td>
                                    <td>@Html.DisplayFor(modelItem => item.sDienTich)</td>
                                    <td style="max-width: 200px; word-wrap: break-word; overflow-wrap: break-word; white-space: normal;">
                                        @Html.DisplayFor(modelItem => item.sDiaChi)
                                    </td>
                                    <td style="width: 200px">
                                        <!-- Carousel start -->
                                        <div id="@carouselId" class="carousel slide" data-bs-ride="carousel">
                                            <div class="carousel-inner">
                                                <!-- First image is active -->
                                                <div class="carousel-item active">
                                                    <img src="~/images/@item.sAnhBia" class="d-block w-100 carousel-image" alt="Ảnh bìa" />
                                                </div>

                                                <!-- Add more images if they exist -->
                                                @if (!string.IsNullOrEmpty(item.sUrl_Path))
                                                {
                                                    <div class="carousel-item">
                                                        <img src="~/images/@item.sUrl_Path" class="d-block w-100 carousel-image" alt="Image 2" />
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(item.sUrl_Path2))
                                                {
                                                    <div class="carousel-item">
                                                        <img src="~/images/@item.sUrl_Path2" class="d-block w-100 carousel-image" alt="Image 3" />
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(item.sUrl_Path3))
                                                {
                                                    <div class="carousel-item">
                                                        <img src="~/images/@item.sUrl_Path3" class="d-block w-100 carousel-image" alt="Image 4" />
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(item.sUrl_Path4))
                                                {
                                                    <div class="carousel-item">
                                                        <img src="~/images/@item.sUrl_Path4" class="d-block w-100 carousel-image" alt="Image 5" />
                                                    </div>
                                                }
                                            </div>

                                            <!-- Carousel Controls -->
                                            <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            </button>
                                            <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            </button>
                                        </div>
                                        <!-- Carousel end -->
                                    </td>
                                    <td>
                                        <a href="@Url.Action("DuyetPhong", new { id = item.sMa })" class="btn btn-success" role="button">Duyệt</a> |
                                        <a href="@Url.Action("TuChoiPhong", new { id = item.sMa })" class="btn btn-danger" role="button">Từ Chối</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    .table-responsive .carousel {
        max-width: 100% !important;
        height: auto !important;
        border-radius: 5% !important;
    }

    .table-responsive .carousel-image {
        width: 100% !important;
        height: 150px !important; 
        object-fit: cover !important;
        border-radius: 5% !important;
    }

    .table-responsive .carousel-control-prev,
    .table-responsive .carousel-control-next {
        background-color: rgba(0, 0, 0, 0.5) !important;
    }

    /* Add a rule to target the table column holding the images */
    .table-responsive td img {
        max-width: 100% !important;
        height: 300px !important; /* Set fixed height */
        object-fit: cover !important;
        border-radius: 5% !important;
    }
</style>

