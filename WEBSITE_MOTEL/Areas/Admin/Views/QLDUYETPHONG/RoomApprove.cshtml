@using WEBSITE_MOTEL.Models
@using PagedList.Mvc;
@model PagedList.PagedList<WEBSITE_MOTEL.Models.RoomDetail>
@{
    ViewBag.Title = "RoomApprove";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}


<h2>Danh sách các phòng trọ chưa được duyệt</h2>
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    @using (Html.BeginForm("RoomApprove", "QLDUYETPHONG", FormMethod.Get, new { @class = "navbar-form navbar-left", @role = "search" }))
                    {
                        <div class="form-group">
                            <input type="text" class="form-control" name="strSearch" value="@ViewData["strSearch"]" placeholder="Tìm kiếm">
                        </div>

                    }

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Tên phòng
                                </th>
                                <th>
                                    Mô tả
                                </th>
                                <th>
                                    Diện tích
                                </th>
                                <th>
                                    Số lượng
                                </th>
                                <th>
                                    Giá
                                </th>
                                <th>
                                    Diện tích
                                </th>
                                <th>
                                    Địa chỉ
                                </th>
                                <th>
                                    Ảnh bìa
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sTenPhong)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sMoTa)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sDienTich)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sSoluong)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dGiaCa)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sDienTich)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sDiaChi)
                                    </td>
                                    <td>
                                        <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
                                            <div class="carousel-inner">
                                                <div class="carousel-item active">
                                                    <img src="~/images/@item.sAnhBia" class="d-block w-100" alt="Image 1" style="width: 145px; height: 110px; border-radius:5%;">
                                                </div>
                                                <div class="carousel-item">
                                                    <img src="~/images/@item.sUrl_Path" class="d-block w-100" alt="Image 2" style="width: 145px; height: 110px; border-radius:5%;">
                                                </div>
                                                <div class="carousel-item">
                                                    <img src="~/images/@item.sUrl_Path2" class="d-block w-100" alt="Image 3" style="width: 145px; height: 110px; border-radius:5%;">
                                                </div>
                                                <div class="carousel-item">
                                                    <img src="~/images/@item.sUrl_Path3" class="d-block w-100" alt="Image 4" style="width: 145px; height: 110px; border-radius:5%;">
                                                </div>
                                                <div class="carousel-item">
                                                    <img src="~/images/@item.sUrl_Path4" class="d-block w-100" alt="Image 5" style="width: 145px; height: 110px; border-radius:5%;">
                                                </div>
                                            </div>
                                            <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon" style="background-color:black;" aria-hidden="false"></span>

                                            </button>
                                            <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                                                <span class="carousel-control-next-icon" style="background-color:black;" aria-hidden="true"></span>
                                            </button>
                                        </div>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("DuyetPhong", new { id = item.sMa })" class="btn btn-success" role="button">Duyệt</a> |
                                        <a href="@Url.Action("TuChoiPhong", new { id = item.sMa })" class="btn btn-danger" role="button">Từ Chối</a>
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.left-arrow').click(function () {
            $('#myCarousel').carousel('prev');
        });

        $('.right-arrow').click(function () {
            $('#myCarousel').carousel('next');
        });
    });
</script>