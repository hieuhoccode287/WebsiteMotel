@model WEBSITE_MOTEL.Models.ChuTro

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN CẦN XÓA</h2>

<h3>Bạn quyết định xóa chủ trọ này?</h3>
<h4>@Html.Raw(ViewBag.ThongBao)</h4>
<div>
    <hr /> <br />
    <dl class="dl-horizontal">
        <dt>
            Tên Chủ Trọ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sHotenCT)
        </dd>

    </dl>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> | @Html.ActionLink("VỀ TRANG QUẢN LÝ CHỦ TRỌ", "Index")
        </div>
    }
</div>
