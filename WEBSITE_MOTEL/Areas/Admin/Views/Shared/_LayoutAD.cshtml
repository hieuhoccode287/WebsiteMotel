<!DOCTYPE html>
@{
    WEBSITE_MOTEL.Models.TAIKHOAN tk = (WEBSITE_MOTEL.Models.TAIKHOAN)Session["Admin"];
}
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin</title>
    <link rel="stylesheet" href="~/Areas/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Areas/assets/vendors/css/vendor.bundle.base.css">
    <link href="~/Areas/assets/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Areas/assets/vendors/jvectormap/jquery-jvectormap.css">
    <link rel="stylesheet" href="~/Areas/assets/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/Areas/assets/vendors/owl-carousel-2/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Areas/assets/vendors/owl-carousel-2/owl.theme.default.min.css">
    <link href="~/Areas/~/Areas/assets/vendors/owl-carousel-2/owl.theme.default.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Areas/assets/css/style.css">
    <link rel="shortcut icon" href="~/Areas/assets/images/favicon.png" />
    <script src="https://unpkg.com/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <div class="container-scroller">
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
                <a class="sidebar-brand brand-logo">
                    <i class="fas fa-wrench"> QUẢN TRỊ</i>
                </a>

                <a class="sidebar-brand brand-logo-mini"><h2>QT</h2></a>
            </div>
            <ul class="nav">
                <li class="nav-item nav-category">
                    <span class="nav-link">Navigation</span>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("Index","Home")">
                        <span class="menu-icon">
                            <i class="mdi mdi-view-dashboard"></i>
                        </span>
                        <span class="menu-title">TỔNG QUAN</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("Index","QLChutro")">
                        <span class="menu-icon">
                            <i class="mdi mdi-account"></i>
                        </span>
                        <span class="menu-title">QUẢN LÝ CHUNG</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("Index","KhuVuc")">
                        <span class="menu-icon">
                            <i class="mdi mdi-map-marker"></i>
                        </span>
                        <span class="menu-title">QUẢN LÝ KHU VỰC</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("Index","HoTro")">
                        <span class="menu-icon">
                            <i class="mdi mdi-help"></i>
                        </span>
                        <span class="menu-title">QUẢN LÝ HỖ TRỢ</span>
                    </a>
                </li>
            </ul>

        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_navbar.html -->
            <nav class="navbar p-0 fixed-top d-flex flex-row">
                <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                    <a class="navbar-brand brand-logo-mini" href="index.html"><img src="~/Areas/assets/images/logo-mini.svg" alt="logo" /></a>
                </div>
                <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                        <span class="mdi mdi-menu"></span>
                    </button>
                    <ul class="navbar-nav navbar-nav-right">
                        <li class="nav-item dropdown border-left">
                            <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                                <img src="~/Images/avataradmin.png" alt="image" style="width:40px; height:40px; border-radius: 50%;">
                                @if (tk != null)
                                {
                                    <span class="ml-2">@tk.HoTen</span> <!-- Display user name with some left margin -->
                                }
                            </a>
                            <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown" style="top: 63px; right: -20px; padding: 0px 0px; ">
                                @if (tk != null)
                                {
                                    <a class="dropdown-item preview-item" style="justify-content: center;">
                                        <div class="preview-item-content">
                                            <button class="btn btn-link p-0 preview-subject ellipsis mb-1" type="button" onclick="window.location.href='@Url.Action("Logout", "Home")'">
                                                Đăng xuất
                                            </button>
                                        </div>
                                    </a>
                                }
                                else
                                {
                                    <a class="dropdown-item preview-item">
                                        <div class="preview-item-content">
                                            <button class="btn btn-link p-0 preview-subject ellipsis mb-1" type="button" onclick="window.location.href='@Url.Action("Login", "Home")'">
                                                Đăng nhập
                                            </button>
                                        </div>
                                    </a>
                                }
                            </div>
                        </li>

                    </ul>
                    <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                        <span class="mdi mdi-format-line-spacing"></span>
                    </button>
                </div>
            </nav>
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
            </div>

        </div>

    </div>

    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Areas/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/Areas/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/Areas/assets/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="~/Areas/assets/vendors/jvectormap/jquery-jvectormap.min.js"></script>
    <script src="~/Areas/assets/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/Areas/assets/vendors/owl-carousel-2/owl.carousel.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Areas/assets/js/off-canvas.js"></script>
    <script src="~/Areas/assets/js/hoverable-collapse.js"></script>
    <script src="~/Areas/assets/js/misc.js"></script>
    <script src="~/Areas/assets/js/settings.js"></script>
    <script src="~/Areas/assets/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/Areas/assets/js/dashboard.js"></script>
    <!-- End custom js for this page -->
</body>


</html>