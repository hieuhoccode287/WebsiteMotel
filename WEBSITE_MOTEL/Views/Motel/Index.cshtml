                        <li><a data-toggle="tab" href="#menu3_@i">HÌNH ẢNH</a></li>
                        @*<li><a data-toggle="tab" href="#menu5_@i">ẢNH 360<sup>o</sup></a></li>*@
                        <li class="position item1"><a data-toggle="tab" href="#menu4_@i">VỊ TRÍ</a></li>
                    </ul>
                    <!-- Content navs tabs-->
