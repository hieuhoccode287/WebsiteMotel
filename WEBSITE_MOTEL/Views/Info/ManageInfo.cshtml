@model WEBSITE_MOTEL.Models.Admin
@using WEBSITE_MOTEL.Models
@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/_LayoutAdmin.cshtml";

}

<div class="nav-text">
    <ol>
        <li><a href="home.html">Trang chủ</a></li>
        <li id="arrow1"><i class="fa fa-angle-right"></i></li>
        <li class="active" id="search-target">Quản lý thông tin</li>
    </ol>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<section class="wrap-content">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.sId)
    <div class="content" style="border: none;">
        <div class="wrapper">
            <div class="tab-content">
                <div role="tabpanel" @*class="tab-pane"*@ id="thong_tin_ca_nhan">
                    <div class="table-responsive">
                        <form id="form_thong_tin_ca_nhan" class="js-form-thong-tin-ca-nhan">


                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6 col-xs-12">
                                        <label for="username">Tài khoản</label>
                                        <input type="text" class="form-control" name="sTaiKhoan" id="" placeholder="" value="@Model.sTaiKhoanAD" disabled="">
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6 col-xs-12">
                                        <label for="first_name">Họ và tên</label>
                                        <input type="text" class="form-control" name="sHotenAD" id="first_name" placeholder="" value="@Model.sHotenAD">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6 col-xs-12">
                                        <label for="phone">Điện thoại</label>
                                        <input type="text" class="form-control" name="sSDT" id="phone" placeholder="" value="@Model.sSDTAD">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6 col-xs-12">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" name="sEmail" id="email" placeholder="" value="@Model.sEmailAD">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6 col-xs-12">
                                        <label for="password_new">Mật khẩu mới</label>
                                        <input type="password" class="form-control" name="sMatKhauAD" id="password_new" placeholder="" value="@Model.sMatKhauAD">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6 col-xs-12">
                                        <label for="password_new2">Xác nhận mật khẩu mới</label>
                                        <input type="password" class="form-control" name="sMatKhauNhapLai" id="password_new2" placeholder="" value="">
                                    </div>
                                </div>
                            </div>



                            <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
                            @*<input type="hidden" name="action" value="update_user_info" />*@
                            @*<button type="submit" class="btn btn-default" id="update">Cập nhật</button>*@
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
}