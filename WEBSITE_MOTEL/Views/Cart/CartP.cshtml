                                                var mapData = '@item.sMap'; // Assuming sMap contains coordinates as "lat,lng"
                                                var latLng = mapData.split(',');
                                                var lat = parseFloat(latLng[0]);
                                                var lng = parseFloat(latLng[1]);

                                                console.log('Lat:', lat, 'Lng:', lng); // Log the coordinates

