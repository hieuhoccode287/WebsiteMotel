                                    }).addTo(mapInstance);

                                    // Add a unique marker for this map instance
                                    L.marker([lat, lng]).addTo(mapInstance)
                                        .bindPopup('Vị trí chính xác')
                                        .openPopup();
                                }

                                $(document).ready(function() {
                                    // Event listener for tab shown
