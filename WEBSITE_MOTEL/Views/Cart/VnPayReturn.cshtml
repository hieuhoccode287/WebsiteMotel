@{
    ViewBag.Title = "Kết quả giao dịch VNPay";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(120deg, #f3f4f6, #e5e9f2);
            color: #333;
        }

        .success-container {
            max-width: 600px;
            margin: 50px auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            padding: 20px;
            text-align: center;
        }

        .success-header {
            background-color: #4caf50;
            color: white;
            padding: 15px 0;
        }

            .success-header h1 {
                margin: 0;
                font-size: 24px;
                font-weight: bold;
            }

        .success-icon {
            font-size: 50px;
            color: #4caf50;
            margin: 20px 0;
        }

        .details {
            text-align: left;
            padding: 15px;
        }

            .details p {
                margin: 10px 0;
                font-size: 16px;
            }

        .btn-home {
            background-color: #4caf50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-transform: uppercase;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-home:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <div class="success-container">
        <div class="success-header">
            <h1>Giao dịch thành công!</h1>
        </div>
        <div class="success-icon">
            &#x2714; <!-- Unicode for a checkmark -->
        </div>
        <div class="details">
            <p><strong>Thời gian giao dịch:</strong> @(((DateTime)ViewBag.Date).ToString("dd/MM/yyyy HH:mm:ss"))</p>
            <p><strong>Mã giao dịch:</strong> @ViewBag.TerminalID</p>
            <p><strong>Tổng tiền:</strong> @ViewBag.Amount VNĐ</p>
        </div>
@*        <button class="btn-home" onclick="window.location.href='@Url.Action("CartP", "Cart")'">Quay lại</button>*@

    </div>
</body>
</html>
